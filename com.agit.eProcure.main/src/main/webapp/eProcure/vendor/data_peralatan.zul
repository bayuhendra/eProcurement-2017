<zk xmlns="http://www.zkoss.org/2005/zul">
    <window apply="org.zkoss.bind.BindComposer"
            viewModel="@id('vm') @init('com.agit.eProcure.main.viewmodel.vendor.VendorVM')">
        <groupbox width="100%" closable="false">
            <caption label="Data Peralatan" style="font-size:16pt; font-weight: bold"/>
            <grid style="border:0">
                
                <columns>
                    <column align="right" width="85%"/>
                    <column align="left" width="15%"/>
                </columns>
                
                <rows>
                    <row>
                        <label/>
                        <button label=" + Tambah" width="100%" />
                    </row>
                </rows>
            </grid>
            <!--<paging forward="onPaging" />-->
            <listbox rows = "11">
                
                <listhead>
                    <listheader label="No" width="3%" align="center"/>
                    <listheader label="Jenis" width="12%" align="center"/>
                    <listheader label="Jumlah" width="5%" align="center"/>
                    <listheader label="Kapasitas" width="7%" align="center"/>
                    <listheader label="Merk/Tipe" width="6%" align="center"/>
                    <listheader label="Tahun Pembuatan" width="10%" align="center"/>
                    <listheader label="Kondisi" width="4%" align="center"/>
                    <listheader label="Lokasi" width="4%" align="center"/>
                    <listheader label="Bukti Kepemilikan" width="8%" align="center"/>
                    <listheader label="Dokumen Kepemilikan" width="12%" align="center"/>
                    <listheader label="Aksi" width="5%" align="center"/>
                </listhead>
                
                <template name="model">
                    <listitem>
                        <listcell>
                            <label width="100%" value=""/>
                        </listcell>
                        <listcell>
                            <label width="100%" value=""/>
                        </listcell>
                        <listcell>
                            <label width="100%" value=""/>
                        </listcell>
                        <listcell>
                            <a label="EDIT" />
                            <a label=" | " style="font-size:12pt ;color:black" />
                            <a label="DELETE" />
                        </listcell>
                    </listitem>
                </template>
            </listbox>
            
            <grid style="border:0">
                
                <columns>
                    <column align="right" width="50%"/>
                    <column align="left" width="50%"/>
                </columns>
                
                <rows>
                    <row>
                        <button label="Kembali" width="20%" />
                        <button label="Selanjutnya" width="20%"/>
                    </row>
                </rows>
            </grid>
        </groupbox>
    </window>
</zk>
