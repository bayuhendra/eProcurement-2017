<zk xmlns="http://www.zkoss.org/2005/zul">
    <window apply="org.zkoss.bind.BindComposer"
            viewModel="@id('vm') @init('com.agit.eProcure.main.viewmodel.vendor.VendorVM')">
        <separator spacing="15px"/>
        <groupbox width="600px" closable="false">
            <caption label="Data Bank" style="font-size:16pt; font-weight: bold"/>
            
            <grid style="border:0">
                <columns>
                    <column width="2%"/>
                    <column width="16%"/>
                    <column width="35%"/>
                    <column width="25%"/>
                </columns>
                <rows>
                    <row>
                        <label value="*)" style="color:red"/>
                        <label value="Nama Bank" style="font-weight: bold"/>
                        <textbox width="100%" />
                        <button label="Cari Bank" />
                    </row>
                </rows>
            </grid>
            
            <grid style="border:0">
                <columns>
                    <column width="3%"/>
                    <column width="20%"/>
                    <column width="60%"/>
                    <column />
                </columns>
                <rows>
                    <row>
                        <label />
                        <label value="Cabang Bank" style="font-weight: bold"/>
                        <textbox width="100%" />
                    </row>
                
                    <row>
                        <label />
                        <label value="Alamat Bank" style="font-weight: bold"/>
                        <textbox width="100%" />
                    </row>
                
                    <row>
                        <label />
                        <label value="Kota" style="font-weight: bold"/>
                        <textbox width="100%" />
                    </row>
                
                    <row>
                        <label />
                        <label value="Negara" style="font-weight: bold"/>
                        <combobox width="40%" >
                            <template name="model">
                                <comboitem label="" value=""/>
                            </template>
                        </combobox>
                    </row>
                
                    <row>
                        <label value="*)" style="color:red"/>
                        <label value="Nomor Rekening" style="font-weight: bold"/>
                        <textbox width="100%" />
                    </row>
                
                    <row>
                        <label value="*)" style="color:red"/>
                        <label value="Nama Nasabah" style="font-weight: bold"/>
                        <textbox width="100%" />
                    </row>
                    
                    <row>
                        <label value="*)" style="color:red"/>
                        <label value="Mata Uang" style="font-weight: bold"/>
                        <combobox width="40%" >
                            <template name="model">
                                <comboitem label="" value=""/>
                            </template>
                        </combobox>
                    </row>
                    
                </rows>
            </grid>
            
            <grid style="border:0">
                <columns>
                    <column width="50%" align="right"/>
                    <column width="50%"/>
                </columns>
                
                <rows>
                    <row>
                        <button label="Kembali" onClick="@command('buttonKlikBackDataBankForm')" width="40%" />
                        <button label="Simpan" onClick="@command('buttonKlikSaveDataBankForm')" width="40%"/>
                    </row>
                </rows>
            </grid>            
        </groupbox>
        
    </window>
</zk>
